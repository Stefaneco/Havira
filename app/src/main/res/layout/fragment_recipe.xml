<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.RecipeFragment">


    <TextView
        android:id="@+id/tv_recipe_title"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_accent_primarydark"
        android:gravity="center"
        android:text="RECIPES"
        android:textColor="@color/colorFont"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/b_categories"
        app:layout_constraintStart_toEndOf="@+id/b_addRecipe"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_addRecipe"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recipe_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recipes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_categoriesRecipe" />

    <Button
        android:id="@+id/b_categories"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_categories"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recipe_title"
        app:layout_constraintEnd_toStartOf="@+id/b_sortByRecipe"
        app:layout_constraintTop_toTopOf="@+id/tv_recipe_title" />

    <Button
        android:id="@+id/b_sortByRecipe"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_sort"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recipe_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_recipe_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_selectedCategoriesRecipe"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_addRecipe" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_categoriesRecipe"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_searchCategoryRecipe" />

    <EditText
        android:id="@+id/et_searchCategoryRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="search"
        android:inputType="textPersonName"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_selectedCategoriesRecipe"
        android:textColor="@color/colorFont"/>

</androidx.constraintlayout.widget.ConstraintLayout>