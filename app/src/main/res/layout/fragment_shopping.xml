<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ShoppingFragment">

    <Button
        android:id="@+id/b_historyShopping"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/trzy_kropeczki"
        app:layout_constraintBottom_toBottomOf="@+id/tv_listShopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_listShopping" />

    <Button
        android:id="@+id/b_FinishShopping"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_ok"
        app:layout_constraintBottom_toBottomOf="@+id/tv_listShopping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_listShopping" />

    <TextView
        android:id="@+id/tv_listShopping"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_accent_primarydark"
        android:gravity="center"
        android:text="SHOPPING LIST"
        android:textColor="@color/colorFont"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/b_addItemShopping"
        app:layout_constraintStart_toEndOf="@+id/b_historyShopping"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_listShopping"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_max="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_listShopping" />

    <Button
        android:id="@+id/b_addItemShopping"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@+id/tv_listShopping"
        app:layout_constraintEnd_toStartOf="@+id/b_FinishShopping"
        app:layout_constraintTop_toTopOf="@+id/tv_listShopping" />

</androidx.constraintlayout.widget.ConstraintLayout>