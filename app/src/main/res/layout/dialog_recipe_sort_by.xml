<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_sortByRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_sortByRecipeRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sortByRecipeName"
        android:clickable="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_sortByRecipeCookTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cook time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sortByRecipeRating"
        android:clickable="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_sortByRecipeMissingReversed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Availability"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sortByRecipeCookTime"
        android:clickable="true"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>