<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="2dp">

    <CheckBox
        android:id="@+id/cb_cardShopping_name"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:text="CheckBox"
        android:textColor="@color/colorFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_cardShopping_unit"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:text="Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:background="@color/white"
        app:layout_constraintWidth_percent="0.1"
        android:textColor="@color/colorFont"/>

    <TextView
        android:id="@+id/tv_cardShopping_amount"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Text"
        android:textColor="@color/colorFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_cardShopping_unit"
        app:layout_constraintStart_toEndOf="@+id/cb_cardShopping_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1" />
</androidx.constraintlayout.widget.ConstraintLayout>